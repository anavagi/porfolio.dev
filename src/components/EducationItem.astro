---

interface Props {
  title: string
  company: string
  description?: string
  date?: string
  comment?: string
}

const { title, company, description, date,comment } = Astro.props
---
  
      <div class="flex items-center">
          <div class="z-10 flex items-center justify-center w-6 h-6 bg-green-500 rounded-full ring-0 ring-white dark:bg-green-700 sm:ring-8 dark:ring-gray-900 shrink-0">
          </div>
          <div class="hidden sm:flex w-full bg-green-500 h-0.5 dark:bg-gray-700"></div>
      </div>
      <div class="mt-3 sm:pe-8">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
          <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
          <p class="text-base font-normal text-gray-500 dark:text-gray-400">{company}</p>
          <p class="text-base font-normal text-gray-500 dark:text-gray-400">{comment}</p>

          <p class="text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
      </div>




